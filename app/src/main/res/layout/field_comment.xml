<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/standart_elevation">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_top"
        app:counterEnabled="true"
        app:counterMaxLength="255"
        app:boxBackgroundColor="@android:color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/standart_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/standart_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/standart_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/standart_corner_radius"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/comment_label"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textAutoCorrect"
            android:textAlignment="center"
            android:padding="@dimen/padding_vertical"
           />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.cardview.widget.CardView>